<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/app_black</item>
        <item name="android:textColorSecondary">@color/app_black</item>
    </style>



    <style name="textView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:fontFamily">@font/sanchez_regular</item>
        <item name="android:padding">@dimen/tiny_small_margin</item>
        <item name="android:textSize">@dimen/default_textsize</item>
    </style>

    <style name="withAlphaTextView" parent="@style/textView">
        <item name="android:alpha">0.7</item>
    </style>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textColorHint">@color/app_black_alpha_50</item>
        <item name="android:fontFamily">@font/sanchez_regular</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:padding">@dimen/tiny_small_margin</item>
        <item name="android:textSize">@dimen/default_textsize</item>
    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/app_black_alpha_70</item>
        <item name="tabSelectedTextColor">@color/app_black</item>
        <item name="android:fontFamily">@font/sanchez_regular</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:padding">@dimen/tiny_small_margin</item>
        <item name="android:textSize">@dimen/default_textsize</item>
    </style>


    <style name="defaultBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:fontFamily">@font/sanchez_regular</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="defaultBtnSmallStyle" parent="defaultBtnStyle">
        <item name="android:textSize">@dimen/small_textsize</item>
        <item name="android:layout_height">@dimen/small_btn_height</item>
    </style>

    <style name="ProgressDialogCustom">
        <item name="android:textSize">@dimen/default_textsize</item>
    </style>

</resources>
