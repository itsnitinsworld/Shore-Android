<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/root_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/extra_small_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/extra_small_image"
            android:layout_height="@dimen/extra_small_image"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/grey"
            android:src="@drawable/ic_clear_24px"
            android:tag="Click"
            android:tint="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/withAlphaTextView"
            android:layout_marginStart="@dimen/small_margin"
            android:background="@drawable/bg_dashed_grey"
            android:padding="@dimen/small_padding"
            android:paddingStart="@dimen/small_padding"
            android:text="@string/help_look_for_shore_in_the_list_and_click"
            android:textAlignment="center" />

    </FrameLayout>

</FrameLayout>